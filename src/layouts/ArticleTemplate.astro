---
import Article from '../components/Article.astro';
import Comments from '../components/Comments.astro';
import PostShare from '../components/PostShare.astro';
import LayoutTemplate from './LayoutTemplate.astro';

const {
	title,
	author,
	pubDate,
	updatedDate,
	heroImage,
	category,
	backgroundColor,
	headings,
	ref,
	isWarning
} = Astro.props;
---

<LayoutTemplate {title}>
	<Article
		{title}
		{author}
		{pubDate}
		{updatedDate}
		{heroImage}
		{category}
		{backgroundColor}
		{headings}
		{ref}
		{isWarning}
	>
		<slot />
	</Article>
	<Comments />
</LayoutTemplate>
